pkgname=tsuki-jp-config
pkgver=1.0
pkgrel=1
pkgdesc=""
arch=('x86_64')
license=('MIT')
depends=(
  'reflector' 'noto-fonts' 'noto-fonts-cjk'
  'fcitx5' 'fcitx5-configtool' 'fcitx5-gtk' 'fcitx5-qt'
)
install=("jp-config.install")

package() {
  install -dm755 "$pkgdir/etc"
  cp -r "$srcdir/etc" "$pkgdir/"
}
