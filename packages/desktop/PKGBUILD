pkgname=tsuki-desktop-config
pkgver=1.0
pkgrel=1
pkgdesc="Configuration files for Tsuki Desktop Environment"
arch=('x86_64')
license=('MIT')
depends=('base')
source=("https://github.com/yutalinux/tsuki-desktop-config/tarball/main")
sha256sums=('SKIP')

package() {
  install -dm755 "$pkgdir/etc"
  install -dm644 "$pkgdir/usr"
  cp -r "$srcdir/yutalinux-tsuki-desktop-config-*"/* "$pkgdir/etc/"
  cp -r "$srcdir/yutalinux-tsuki-desktop-config-*"/* "$pkgdir/usr/share/"
}
